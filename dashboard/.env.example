# QuantLink Oracle Dashboard Environment Configuration

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="QuantLink Oracle Dashboard"
NEXT_PUBLIC_APP_VERSION=1.0.0

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001
NEXT_PUBLIC_WEBSOCKET_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WEBSOCKET_RECONNECT_DELAY=1000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER=jwt
NEXT_PUBLIC_ENABLE_WEB3_AUTH=true
NEXT_PUBLIC_ENABLE_MFA=true

# Real-time Data
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_DATA_REFRESH_INTERVAL=1000
NEXT_PUBLIC_MAX_DATA_POINTS=1000

# Performance
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_CACHE_TTL=300000

# Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CORS_ENABLED=true

# Features
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_THEMES=true
